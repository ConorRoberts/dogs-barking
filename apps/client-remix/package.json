{
  "name": "client-remix",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "pnpm build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css && tailwindcss -m -i ./styles/preflight.css -o app/styles/preflight.css",
    "dev": "concurrently \"pnpm dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css && tailwindcss -w -i ./styles/preflight.css -o app/styles/preflight.css"
  },
  "dependencies": {
    "@remix-run/node": "^1.7.6",
    "@remix-run/react": "^1.7.6",
    "@remix-run/vercel": "^1.7.6",
    "@vercel/node": "^2.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.6",
    "@remix-run/eslint-config": "^1.7.6",
    "@remix-run/serve": "^1.7.6",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.0",
    "concurrently": "^7.5.0",
    "eslint": "^8.27.0",
    "postcss": "^8.4.4",
    "tailwindcss": "^3.0.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
